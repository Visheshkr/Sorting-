#include<iostream>
using namespace std;
void heapify(int *a,int n,int i){
    int largest=i;
    int left=2*i+1;//for getting index value of left child
    int right=2*i+2;//for getting index value of right child 
    if(left<n&&a[left]>a[largest]){
        largest=left;
    }
    if(right<n&&a[right]>a[largest]){
        largest=right;
    }
    if(largest!=i){
        swap(a[i],a[largest]);//checking that new of value of largest is not equal to i means we have found larger value of element so we need to swap it with the current index value
        heapify(a,n,i);//again calling heapify for rearranging the tree 
    }
}
void heapsort(int *a,int n)
{
    for (int i = n / 2 - 1; i >= 0; i--)//for non-leaf elements therefore  we are taking n/2-1 as we have n/2 elements as leaf elements in any heap
        heapify(a, n, i);
 
    for (int i = n - 1; i > 0; i--) {
        swap(a[0], a[i]);//for removing root node value and adding it to the end of array for sorting in ascending order as we are building max heap here 
 
        heapify(a, i, 0);
    }
}
void printArray(int *a,int n){
    cout<<"\n The array elements are"<<endl;
    for(int i=0;i<n;i++)
    cout<<a[i]<<" ";
}
int main(){
    int n;
    cout<<"\n Enter the size of the array"<<endl;
    cin>>n;
    int a[n];
    cout<<"\n Enter the elements in the Array"<<endl;
    for(int i=0;i<n;i++)
    cin>>a[i];
    printArray(a,n);
    heapsort(a,n);
    printArray(a,n);
    return 0;
    
}
